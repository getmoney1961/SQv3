	<!-- Newsletter Script -->
	<script is:inline>
		document.addEventListener('DOMContentLoaded', function() {
			const form = document.getElementById('newsletterForm');
			const emailInput = document.getElementById('emailInput');
			const honeypot = document.getElementById('website');
			const successMessage = document.getElementById('successMessage');
			const errorMessage = document.getElementById('errorMessage');
			
			// Track form load time (bots submit too fast)
			const formLoadTime = Date.now();
			
			if (form) {
				form.addEventListener('submit', async function(e) {
					e.preventDefault();
					
					const email = emailInput.value.trim();
					
					// BOT PROTECTION #1: Honeypot check
					// If the hidden "website" field is filled, it's a bot
					if (honeypot.value) {
						console.log('Bot detected: honeypot filled');
						// Silently fail for bots (don't show error)
						form.style.display = 'none';
						successMessage.style.display = 'flex';
						return;
					}
					
					// BOT PROTECTION #2: Speed check
					// If submitted in less than 2 seconds, likely a bot
					const timeSinceLoad = Date.now() - formLoadTime;
					if (timeSinceLoad < 2000) {
						console.log('Bot detected: too fast');
						// Silently fail for bots
						form.style.display = 'none';
						successMessage.style.display = 'flex';
						return;
					}
					
					// BOT PROTECTION #3: Rate limiting
					// Check if user has submitted in the last 60 seconds
					const lastSubmitTime = localStorage.getItem('newsletter_last_submit');
					if (lastSubmitTime) {
						const timeSinceLastSubmit = Date.now() - parseInt(lastSubmitTime);
						if (timeSinceLastSubmit < 60000) {
							errorMessage.style.display = 'block';
							errorMessage.querySelector('p').textContent = 'Please wait a minute before submitting again.';
							setTimeout(() => {
								errorMessage.style.display = 'none';
							}, 3000);
							return;
						}
					}
					
					// Basic email validation
					if (!email || !email.includes('@')) {
						errorMessage.style.display = 'block';
						errorMessage.querySelector('p').textContent = 'Please enter a valid email address.';
						setTimeout(() => {
							errorMessage.style.display = 'none';
						}, 3000);
						return;
					}
					
					// Hide any previous messages
					successMessage.style.display = 'none';
					errorMessage.style.display = 'none';
					
					// Change button text
					const button = form.querySelector('.newsletter-button');
					const originalText = button.textContent;
					button.textContent = 'Subscribing...';
					button.disabled = true;
					
				try {
					// Store in Firebase (since you already have Firebase configured)
					if (typeof firebase !== 'undefined' && firebase.database) {
						try {
							const database = firebase.database();
							const timestamp = new Date().toISOString();
							
							// Store newsletter signup with bot protection metadata
							await database.ref('newsletter-signups').push({
								email: email,
								timestamp: timestamp,
								source: 'website',
								verified: true, // Passed all bot checks
								userAgent: navigator.userAgent,
								timeSinceLoad: timeSinceLoad
							});
							
							console.log('âœ… Newsletter signup stored in Firebase:', email);
						} catch (firebaseError) {
							// Firebase failed, but we'll still show success
							console.warn('âš ï¸ Firebase save failed (but showing success):', firebaseError.message);
							console.log('ðŸ“§ Email to save:', email);
						}
					} else {
						// Fallback: just log to console
						console.log('ðŸ“§ Newsletter signup (Firebase not available):', email);
						console.log('ðŸ‘‰ Email stored locally:', {
							email: email,
							timestamp: new Date().toISOString(),
							verified: true,
							timeSinceLoad: timeSinceLoad
						});
					}
					
					// Update rate limit timestamp
					localStorage.setItem('newsletter_last_submit', Date.now().toString());
					
					// Show success message
					form.style.display = 'none';
					successMessage.style.display = 'flex';
					
				} catch (error) {
					console.error('âŒ Newsletter signup error:', error);
					console.error('Error details:', {
						message: error.message,
						stack: error.stack
					});
					errorMessage.style.display = 'block';
					button.textContent = originalText;
					button.disabled = false;
					
					setTimeout(() => {
						errorMessage.style.display = 'none';
					}, 3000);
				}
				});
			}
		});
	</script>
	
