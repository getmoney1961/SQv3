---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'The Book - Success Quotes';
const description = 'Discover our inspiring book filled with powerful success quotes to motivate and transform your life.';
---

<BaseLayout title={title} description={description}>
  <style>
    .book-page {
      max-width: 1200px;
      margin: 0 auto;
      padding: 60px 20px;
      min-height: calc(100vh - 200px);
    }

    .book-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 40px;
      text-align: center;
    }

    .book-title {
      font-size: 3em;
      color: white;
      font-family: 'Instrument Serif', serif;
      margin-bottom: 20px;
    }

    .book-subtitle {
      font-size: 1.5em;
      color: #ccc;
      margin-bottom: 40px;
      max-width: 800px;
      line-height: 1.6;
    }

    .book-image-container {
      position: relative;
      max-width: 500px;
      width: 100%;
      margin: 20px 0;
    }

    .book-image {
      width: 100%;
      height: auto;
      border-radius: 12px;
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
      transition: transform 0.3s ease;
    }

    .book-image:hover {
      transform: scale(1.05);
    }

    .book-description {
      max-width: 700px;
      font-size: 1.2em;
      line-height: 1.8;
      color: #ddd;
      margin: 30px 0;
    }

    .cta-button {
      display: inline-block;
      padding: 18px 48px;
      font-size: 1.3em;
      font-weight: 700;
      color: white;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      border-radius: 12px;
      text-decoration: none;
      transition: all 0.3s ease;
      margin-top: 30px;
      box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
    }

    .cta-button:hover {
      transform: translateY(-3px);
      box-shadow: 0 15px 40px rgba(102, 126, 234, 0.4);
    }

    .book-features {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 30px;
      margin-top: 60px;
      width: 100%;
    }

    .feature-card {
      background: rgba(255, 255, 255, 0.05);
      padding: 30px;
      border-radius: 12px;
      border: 1px solid rgba(255, 255, 255, 0.1);
      transition: all 0.3s ease;
    }

    .feature-card:hover {
      background: rgba(255, 255, 255, 0.08);
      transform: translateY(-5px);
    }

    .feature-icon {
      font-size: 2.5em;
      margin-bottom: 15px;
    }

    .feature-title {
      font-size: 1.3em;
      color: white;
      margin-bottom: 10px;
      font-weight: 600;
    }

    .feature-text {
      font-size: 1em;
      color: #bbb;
      line-height: 1.6;
    }

    @media (max-width: 768px) {
      .book-title {
        font-size: 2em;
      }

      .book-subtitle {
        font-size: 1.2em;
      }

      .book-description {
        font-size: 1.1em;
      }

      .cta-button {
        padding: 15px 36px;
        font-size: 1.1em;
      }
    }
  </style>

  <div class="book-page">
    <div class="book-container">
      <h1 class="book-title">Success Quotes: The Book</h1>
      
      <p class="book-subtitle">
        Transform your mindset and achieve your dreams with this powerful collection of inspiring quotes
      </p>

      <div class="book-image-container">
        <!-- Replace 'book-cover.jpg' with your actual book image file -->
        <img 
          src="/book-cover.jpg" 
          alt="Success Quotes Book Cover" 
          class="book-image"
          onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
        />
        <!-- Placeholder if image not found -->
        <div style="display: none; width: 100%; height: 600px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 12px; align-items: center; justify-content: center; font-size: 2em; color: white;">
          ðŸ“– Book Cover Image
        </div>
      </div>

      <div class="book-description">
        <p>
          Dive into a carefully curated collection of the most powerful success quotes from history's 
          greatest minds. Each page is designed to inspire, motivate, and guide you on your journey 
          to achieving your dreams.
        </p>
      </div>

      <!-- Amazon Buy Button - Replace with your actual Amazon link -->
      <a 
        href="https://www.amazon.com/your-book-link" 
        target="_blank" 
        rel="noopener noreferrer" 
        class="cta-button"
      >
        Buy on Amazon
      </a>

      <div class="book-features">
        <div class="feature-card">
          <div class="feature-icon">âœ¨</div>
          <h3 class="feature-title">Carefully Curated</h3>
          <p class="feature-text">
            Hand-picked quotes from the most influential leaders, thinkers, and achievers
          </p>
        </div>

        <div class="feature-card">
          <div class="feature-icon">ðŸ’¡</div>
          <h3 class="feature-title">Daily Inspiration</h3>
          <p class="feature-text">
            Perfect for daily reading to keep you motivated and focused on your goals
          </p>
        </div>

        <div class="feature-card">
          <div class="feature-icon">ðŸŽ¯</div>
          <h3 class="feature-title">Organized by Theme</h3>
          <p class="feature-text">
            Easy to find the perfect quote for any situation or challenge you face
          </p>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

